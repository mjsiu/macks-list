<%= render 'shared/navbar' %>

<div class="splash-area1">
  <div class="well bs-component sign-up">

  <form class="form-group" action="<%=users_url%>" method="post">
    <h2>Sign Up</h2>
    <%=form_token %>
    <label for="Username">Username</label>
    <input class="form-control" type="text" name="user[username]">
    <br/>
    <label for="Username">Email</label>
    <input class="form-control" type="text" name="user[email]">
    <br/>
    <label for="user_password">Password</label>
    <input class="form-control" type="password" name="user[password]">
    <br/>
    <label>City</label>
      <select class="form-control"
             type="text"
             name="user[city_id]">
             <option></option>
             <option value='<%=1%>'San Francisco</option>
             <option value='<%=2%>'>Oakland</option>
             <option value='<%=3%>'>Berkeley</option>
             <option value='<%=4%>'>San Mateo</option>
             <option value='<%=5%>'>San Jose</option>
      </select>
    <br/>
    <input class="btn btn-default" type="submit" value="Sign Up">
    <br/>
    <br/>
    <div class="signup-error">
      <% if flash[:errors] %>
        <% flash[:errors].each do |error| %>
          <p>
            <%= error %>
          </p>
        <% end %>
      <% end %>
    </div>
    <a href="<%=new_session_url%>">Back to sign in</a>
  </form>
</div>
</div>
